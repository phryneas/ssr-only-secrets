{
  "name": "ssr-only-secrets",
  "version": "0.1.0",
  "description": "This package provides a way to pass secrets from Server Components into the SSR-run of Client Components, without them being accessible in the browser.",
  "type": "module",
  "main": "dist/types.cjs",
  "exports": {
    ".": {
      "require": {
        "react-server": "./dist/rsc.cjs",
        "node": "./dist/ssr.cjs",
        "default": "./dist/browser.cjs"
      },
      "import": {
        "react-server": "./dist/rsc.js",
        "node": "./dist/ssr.js",
        "default": "./dist/browser.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phryneas/ssr-only-secrets.git"
  },
  "author": "Lenz Weber-Tronic",
  "license": "MIT",
  "dependencies": {
    "optimism": "^0.17.5"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.23.16",
    "@microsoft/api-extractor": "^7.39.1",
    "@tsconfig/recommended": "^1.0.3",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18"
  },
  "scripts": {
    "build": "yarn build:build && yarn build:docs && yarn build:readme",
    "build:build": "tsup",
    "build:docs": "rimraf temp; tsc; api-extractor run; api-documenter markdown --input-folder temp --output-folder docs",
    "build:readme": "sed 's@(./@(https://github.com/phryneas/ssr-only-secrets/blob/main/docs/@' docs/ssr-only-secrets.md > README.md",
    "prepare": "yarn build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "tsup": {
    "entry": [
      "src/types.ts",
      "src/rsc.ts",
      "src/ssr.ts",
      "src/browser.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "format": [
      "cjs",
      "esm"
    ]
  }
}
